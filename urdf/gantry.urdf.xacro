<?xml version="1.0"?>
<robot name="whiteboard_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Properties -->
  <xacro:property name="duster_radius" value="0.15" />
  <xacro:property name="duster_height" value="0.02" />
  <xacro:property name="board_z_level" value="0.90" />

  <!-- World Link -->
  <link name="world"/>

  <!-- X-Axis Mechanism -->
  <link name="x_gantry_link">
    <visual>
      <geometry><box size="0.1 1.2 0.1"/></geometry>
      <material name="blue"><color rgba="0.1 0.1 0.8 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.1 1.2 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="x_joint" type="prismatic">
    <parent link="world"/>
    <child link="x_gantry_link"/>
    <origin xyz="0 0 ${board_z_level + 0.1}" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.9" effort="100.0" velocity="1.0"/>
  </joint>

  <!-- Y-Axis Mechanism -->
  <link name="y_gantry_link">
    <visual>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
      <material name="green"><color rgba="0.1 0.8 0.1 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
    </inertial>
  </link>

  <joint name="y_joint" type="prismatic">
    <parent link="x_gantry_link"/>
    <child link="y_gantry_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.9" effort="100.0" velocity="1.0"/>
  </joint>

  <!-- Duster Head -->
  <link name="duster_link">
    <visual>
      <geometry><cylinder radius="${duster_radius}" length="${duster_height}"/></geometry>
      <material name="red"><color rgba="0.8 0.1 0.1 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="${duster_radius}" length="${duster_height}"/></geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="duster_joint" type="continuous">
    <parent link="y_gantry_link"/>
    <child link="duster_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- ROS 2 Control Integration for Gazebo Harmonic -->
  <gazebo>
    <!-- Using ABSOLUTE PATH to guarantee library is found -->
    <plugin filename="/opt/ros/jazzy/lib/libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find whiteboard_robot)/config/controllers.yaml</parameters>
    </plugin>
  </gazebo>

  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="x_joint">
      <command_interface name="position">
        <param name="min">0</param>
        <param name="max">0.9</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="y_joint">
      <command_interface name="position">
        <param name="min">0</param>
        <param name="max">0.9</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="duster_joint">
      <command_interface name="velocity">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

</robot>